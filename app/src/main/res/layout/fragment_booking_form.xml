<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book your Seat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            android:layout_marginStart="16dp"/>

        <!-- Name -->
        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Enter your name"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#9E9E9E"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblName" />

        <!-- Place -->
        <TextView
            android:id="@+id/lblPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etPlace"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="Enter your apartment name"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#9E9E9E"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblPlace" />

        <!-- Phone -->
        <TextView
            android:id="@+id/lblPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPlace" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="0652165910"
            android:inputType="phone"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#9E9E9E"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblPhone" />

        <!-- Booking Details -->
        <TextView
            android:id="@+id/lblDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhone" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="#A0C4FF" 
            app:strokeWidth="1dp" 
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F8F9FE"
            app:layout_constraintTop_toBottomOf="@+id/lblDetails">
            <!-- Screenshot has light blue fill and blue border? 
                 Or white fill blue border. "Booking Details" header is separate.
                 Let's use slight blue tint background for "highlight" feel if detailed.
                 Screenshot looks White with Blue Border. -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Route -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/primary"/>
                    <TextView
                        android:id="@+id/tvDetailRoute"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Assumption University to Siam"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/primary"/>
                </LinearLayout>

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/primary"/>
                    <TextView
                        android:id="@+id/tvDetailDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun, June 15 2025"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/primary"/>
                    <TextView
                        android:id="@+id/tvDetailTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:00"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- Seat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_seat"
                        app:tint="@color/primary"/>
                    <TextView
                        android:id="@+id/tvDetailSeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1A"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cardDetails"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/bg_button_cancel"
                android:layout_marginEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Confirm Booking"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_seat_booked"
                android:backgroundTint="@color/primary"
                android:layout_marginStart="8dp"/>
                <!-- Reusing bg_seat_booked (Blue Rounded) for simplicity and consistency -->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
