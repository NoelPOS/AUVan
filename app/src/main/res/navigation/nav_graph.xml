<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.auvan.OnboardingFragment"
        android:label="Onboarding"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.auvan.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.auvan.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.auvan.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_seatSelectionFragment"
            app:destination="@id/seatSelectionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myBookingsFragment"
            app:destination="@id/myBookingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/seatSelectionFragment"
        android:name="com.example.auvan.SeatSelectionFragment"
        android:label="Seat Selection"
        tools:layout="@layout/fragment_seat_selection">
        <action
            android:id="@+id/action_seatSelectionFragment_to_bookingFormFragment"
            app:destination="@id/bookingFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookingFormFragment"
        android:name="com.example.auvan.BookingFormFragment"
        android:label="Booking Form"
        tools:layout="@layout/fragment_booking_form">
        <action
            android:id="@+id/action_bookingFormFragment_to_bookingConfirmationFragment"
            app:destination="@id/bookingConfirmationFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/bookingConfirmationFragment"
        android:name="com.example.auvan.BookingConfirmationFragment"
        android:label="Booking Confirmation"
        tools:layout="@layout/fragment_booking_confirmation">
        <action
            android:id="@+id/action_bookingConfirmationFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_bookingConfirmationFragment_to_myBookingsFragment"
            app:destination="@id/myBookingsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.auvan.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/rescheduleBookingFragment"
        android:name="com.example.auvan.RescheduleBookingFragment"
        android:label="Reschedule Booking"
        tools:layout="@layout/fragment_reschedule_booking" />

    <fragment
        android:id="@+id/myBookingsFragment"
        android:name="com.example.auvan.MyBookingsFragment"
        android:label="My Bookings"
        tools:layout="@layout/fragment_my_bookings">
        <action
            android:id="@+id/action_myBookingsFragment_to_rescheduleBookingFragment"
            app:destination="@id/rescheduleBookingFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.auvan.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.auvan.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

</navigation>
